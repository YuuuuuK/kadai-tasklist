<div class="row">
    <div class="col-xs">

<%= form_for(tasklist) do |f| %>

<% if tasklist.errors.any? %>

<div class="alert alert-warning">
    <ul>
        <% tasklist.errors.full_messages.each do |tasklist| %>
        
        <li>
            <%= tasklist %>
        </li>
            <% end %>
    </ul>
</div>

<% end %>

<div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :Content, 'タスク' %>
<%= f.text_field :Content, class: 'form-control' %>
</div>

<%= f.submit '登録', class:'btn btn-promary' %>
<% end %>

</div>